{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Morgana": {
    "Cauldron": {
      "BaseUrl": "https://localhost:5002"
    },
    "LLM": {
      "Provider": "AzureOpenAI",
      "AzureOpenAI": {
        "Endpoint": "_SECURE_OVERRIDE_",
        "ApiKey": "_SECURE_OVERRIDE_",
        "DeploymentName": "_SECURE_OVERRIDE_"
      },
      "Anthropic": {
        "ApiKey": "_SECURE_OVERRIDE_",
        "Model": "_SECURE_OVERRIDE_"
      }
    },
    "MCPServers": [
      {
        "Name": "BillingServer",
        "Uri": "stdio:///usr/local/bin/billing-mcp-server",
        "Enabled": true,
        "AdditionalSettings": {
          "Args": "[\"--db-connection\", \"postgres://billing-db:5432/billing\", \"--verbose\"]"
        }
      }
    ],
    "Plugins": {
      "Assemblies": [
        "Morgana.AI.Examples.dll"
      ]
    }
  }
}
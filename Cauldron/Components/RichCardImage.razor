@namespace Cauldron.Components

<div class="rich-card-image rich-card-image-@Component.Size.ToString().ToLower()">
    <img src="@Component.Src" 
         alt="@(Component.Alt ?? "Image")" 
         class="rich-card-image-content"
         loading="lazy"
         @onclick="HandleImageClick" />
    
    @if (!string.IsNullOrEmpty(Component.Caption))
    {
        <p class="rich-card-image-caption">@Component.Caption</p>
    }
</div>

@code {
    /// <summary>
    /// The image component to render.
    /// </summary>
    [Parameter]
    public required ImageComponent Component { get; set; }

    /// <summary>
    /// Handles image click events.
    /// Currently logs to console; can be extended for lightbox/fullscreen modal.
    /// </summary>
    private void HandleImageClick()
    {
        // TODO: Future enhancement - open in fullscreen modal/lightbox
        Console.WriteLine($"üñºÔ∏è Image clicked: {Component.Src}");
    }
}